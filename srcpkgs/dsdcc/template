# Template file for 'dsdcc'
pkgname=dsdcc
version=1.8.6
revision=1
build_style=cmake
makedepends="libusb-devel"
short_desc="Digital Speech Decoder (DSD) rewritten as a C++ library"
maintainer="bra1nwave <bra1nwave@protonmail.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/f4exb/dsdcc"
distfiles="${homepage}/archive/v${version}.tar.gz"
checksum=5c9d6f90a81fd4ddfa2e99891b140447129e4ae47c4592df90a2faf1b40ea61b

dsdcc-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}

# Template file for 'codec2'
pkgname=codec2
version=0.9.2
revision=1
build_style=cmake
short_desc="Speech codec designed for communications"
maintainer="bra1nwave <bra1nwave@protonmail.com>"
license="LGPL-2.1-only"
homepage="http://www.rowetel.com/?page_id=452"
distfiles="https://github.com/drowe67/codec2/archive/v${version}.tar.gz"
checksum=19181a446f4df3e6d616b50cabdac4485abb9cd3242cf312a0785f892ed4c76c

codec2-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/cmake
		vmove "usr/lib/*.so"
	}
}

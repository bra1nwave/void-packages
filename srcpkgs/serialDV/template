# Template file for 'serialDV'
pkgname=serialDV
version=1.1.2
revision=1
build_style=cmake
short_desc="Minimal audio encoder and decoder for AMBE3000 based devices"
maintainer="bra1nwave <bra1nwave@protonmail.com>"
license="GPL-3.0-or-later"
homepage="https://github.com/f4exb/serialDV"
distfiles="${homepage}/archive/v${version}.tar.gz"
checksum=17bdae77bd5c30204ea3a4cb30cba678b91d7a033ac3b354c1d14a52975eb5fa

serialDV-devel_package() {
	short_desc+=" - development file"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
	}
}

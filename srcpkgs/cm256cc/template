# Template file for 'cm256cc'
pkgname=cm256cc
version=1.0.5
revision=1
build_style=cmake
makedepends="boost-devel"
short_desc="Fast GF(256) Cauchy MDS Block Erasure Codec in C++"
maintainer="bra1nwave <bra1nwave@protonmail.com>"
license="BSD-3-Clause"
homepage="https://github.com/f4exb/cm256cc"
distfiles="${homepage}/archive/v${version}.tar.gz"
checksum=93e51021bbb0d7e7f8836a833a50593dad9d044d7dfdb0db636a846bf76fcd28

cm256cc-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
